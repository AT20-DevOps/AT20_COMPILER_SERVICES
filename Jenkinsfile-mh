pipeline {
    agent any
    stages {
        stage('Test') {
            agent {docker 'marseonji/node-18-alpine3.16-cb'}
            steps {
                sh 'npm install'
                sh 'npm test'
            }
            post {
                always {
                    archiveArtifacts artifacts: 'tests/report/report.html', followSymlinks: false
                }
            }
        }
    }
}