pipeline {
    agent any
    stages {
        stage('Test') {
            agent {docker 'marseonji/node-18-alpine3.16-cb'}
            steps {
                sh 'npm install'
                sh 'npm test'
            }
            post {
                always {
                    archiveArtifacts artifacts: 'tests/report/report.html', followSymlinks: false
                }
            }
        }
        stage('Package') {
            steps {
                sh 'docker build -t at20_compiler_services'
            }
        }
        stage('Publish') {
            steps {
                sh 'echo docker login -u marseonji -p'
                sh 'echo docker tag at20_compiler_services marseonji/at20_compiler_service'
                sh 'echo docker push marseonji/at20_compiler_service'
            }
        }
    }
}